{
  "extends":"@tsconfig/node22/tsconfig.json",

  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types","./src/types"],
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": false
},
"include": ["*src/**/*"],
"exclude": ["*src/node_module"]
}